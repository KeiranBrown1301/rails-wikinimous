<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Wikinimous</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
</nav>

<div class="container">

  <div class="d-flex justify-content-center">
    <div class="text-center">
      <h2>Today's top articles</h2>
    </div>
  </div>


  <div class="d-flex justify-content-center">
    <div class="row">
      <div class="col-lg">
        <% @articles.each do |article| %>
          <div class="card bg-light border-dark text-center mb-3" style="width: 24rem;">
          <img class="card-img-top " src="https://hips.hearstapps.com/hmg-prod.s3.amazonaws.com/images/jason-alexander-as-george-costanza-julia-louis-dreyfus-as-news-photo-1583442944.jpg?crop=1xw:1xh;center,top&resize=980:*" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title"><%= article.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted"></h6>
              <p class="card-text"><%= article.content %></p>
              <a href="#" class="card-link"><%= link_to "Read more", article_path(article) %></a>
              <a href="#" class="card-link"></a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
